{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Vite + Electron Main",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "Start Vite Dev Server",
      "program": "${workspaceFolder}/src/main.mjs",
      "runtimeExecutable": "electron",
      "args": ["."],
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "node_modules/electron/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/node_modules/xbot-js/**/*.js",
        "${workspaceFolder}/node_modules/xbot-js/**/*.mjs",
        "${workspaceFolder}/node_modules/xbot-js/**/*.ts",
        "${workspaceFolder}/src/**/*.js",
        "${workspaceFolder}/src/**/*.mjs"
      ],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3100"
      }
    }
  ]
}
